<div class="container text">
	<div class="row">
		<div class"col s12">
			<p>Your request:</p>
		</div>
	</div>
	<div class="row">
		<div class="col s6">
			<strong>Song link:</strong>
			<br>
			<%= @request.songurl %>
		</div>
		<div class="col s6">
			<strong>Your Twitch Username:</strong>
			<br>
			<%= @request.twitchname %>
		</div>
	</div>
	<div class="row">
		<%= link_to 'Edit', edit_request_path(@request), { :class => 'waves-effect waves-light text btn' } %>
		<%= link_to 'Back', queue_path, { :class => 'waves-effect waves-light text btn' } %>
	</div>
</div>
