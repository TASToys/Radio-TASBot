<div class="container text">
	<table class="striped highlight centered">
		<thead>
			<tr>
				<th>Requested Song</th>
				<th>Twitch name</th>
				<th colspan="3"></th>
			</tr>
		</thead>	
		<tbody>
			<% @requests.each do |request| %>
				<tr>
					<td><%= link_to request.songurl, "#{request.songurl}" %></td>
					<td><%= request.twitchname %></td>
					<% if user_signed_in? == true %>
						<td><%= request.created_at %></td>
						<td><%= link_to 'Show', request %></td>
						<td><%= link_to 'Edit', edit_request_path(request) %></td>
						<td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?'  } %></td>
					<% end %>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>
